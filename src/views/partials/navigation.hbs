        <li class="nav-item">
          <a class="nav-link menu-link" href="/notas">
            <i class="fas fa-clipboard-list me-1"></i> Mis Notas
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link menu-link" href="/contacto">
            <i class="fas fa-envelope me-1"></i> Contacto
          </a>
        </li>
      </ul>
      <!-- Botón Salir alineado a la derecha con efecto hover -->
      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <a class="nav-link menu-link btn-exit" href="/usuarios/salir">
            <i class="fas fa-sign-out-alt me-1"></i> Salir
